{
  "manifest_version": 2,
  "name"            : "izNote",
  "description"     : "Easy note",
  "short_name"      : "izNote",
  "version"         : "0.1",
  "browser_action": {
    "default_icon" : "images/favicon.ico"
  },
  "background": {
    "persistent": false,
    "page": "index.html"
    // "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "images/favicon.ico"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
